<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right|end"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/microphone"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_mic_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/undo_note"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/undo_note" />

        <ImageView
            android:id="@+id/redo_note"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/redo_note" />

        <ImageView
            android:id="@+id/cancel_format"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/cancel_format" />

        <ImageView
            android:id="@+id/all_caps"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/all_caps" />

        <ImageView
            android:id="@+id/underlineText"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_underline_text" />

        <ImageView
            android:id="@+id/italicText"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_italics_text" />

        <ImageView
            android:id="@+id/boldText"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_bold_text" />

    </LinearLayout>

</RelativeLayout>