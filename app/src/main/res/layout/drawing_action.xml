<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right|end"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawing_brush"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/drawing_brush" />

        <ImageView
            android:id="@+id/drawing_eraser"
            android:layout_width="@dimen/action_images"
            android:layout_height="@dimen/action_images"
            android:layout_weight="1"
            app:srcCompat="@mipmap/drawing_eraser" />

    </LinearLayout>
</RelativeLayout>